<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/timeline_pic"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:src="@drawable/icon_zhan"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/author_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/author_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/author_head"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/author_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_alignBottom="@+id/author_head"
                android:layout_toRightOf="@+id/author_head"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/author_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/author_head"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/time_play_count"
                android:text=""
                android:drawablePadding="10dp"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/author_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/item_share"
                android:text=""
                android:drawablePadding="10dp"
                android:textSize="10sp"
                android:layout_toLeftOf="@+id/author_hits"
                android:layout_alignBottom="@+id/author_head"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

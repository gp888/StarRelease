<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true">
    <ImageView
        android:id="@+id/pic_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/at_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/prac_end"
            android:textSize="46sp"
            android:text=""
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/hot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/hot_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:maxEms="14"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/newpink"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/hits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pink_heart"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pink_share"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

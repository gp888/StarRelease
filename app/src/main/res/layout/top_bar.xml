<?xml version="1.0" encoding="utf-8"?>
<!--顶部条-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_back_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#66000000"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_play_finish"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/tv_big_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="marquee"/>
        <ImageView
            android:id="@+id/tv_enjoy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_uncollection"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_share"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginBottom="48dp">
        <ImageView
            android:id="@+id/iv_damuke_pori"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_tan"
            android:scaleType="centerInside"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>

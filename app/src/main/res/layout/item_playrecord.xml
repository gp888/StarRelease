<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_record"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回放"
            android:textSize="10sp"
            android:textColor="@color/prac_end"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_rectangle_textview"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/icon_record"
            android:background="@drawable/tab_background">
            <TextView
                android:id="@+id/title_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/desc_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:layout_below="@+id/title_record"
                android:layout_alignLeft="@+id/title_record"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/time_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawablePadding="10dp"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/title_record"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
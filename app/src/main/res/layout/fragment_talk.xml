<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/conversation_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="vertical"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:background="@color/prac_start"
        android:paddingBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/appimage_smile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/icon_smile"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical" />
        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:minHeight="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/submitorders_dialog_bg"
            android:hint="可以发弹幕哟~"
            android:textSize="14sp"
            android:textCursorDrawable="@null"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:gravity="center"
            android:background="@color/prac_end"
            android:padding="10dp"/>
    </LinearLayout>
    <com.xingfabu.direct.emoji.SmileLayout
        android:id="@+id/write_smile_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>

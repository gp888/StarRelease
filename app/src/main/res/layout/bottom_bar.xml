<?xml version="1.0" encoding="utf-8"?>
<!-- 底部栏 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_bottom_bar"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_heart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <com.xingfabu.direct.heart.PeriscopeLayout
            android:id="@+id/heart_layout"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_heart"
            android:onClick="onClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/red_hearth"
            android:scaleType="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_support"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_rectangle_textview"
            android:textColor="#dfdfdc"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#66000000">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/icon_play_play"/>

        <LinearLayout
            android:id="@+id/video_process_panl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:maxHeight="2.5dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/po_seekbar"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp"/>
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <LinearLayout
                android:id="@+id/video_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="2dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/video_currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:21"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/video_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:10"
                    android:textColor="@android:color/white"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="00:00/00:00"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_edit"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/iv_danmuke"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_tan"
            android:scaleType="centerInside"
            android:onClick="onClick"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_money"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/icon_shang"
            android:scaleType="centerInside"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/iv_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="15dp"
            android:src="@drawable/icon_full"
            android:onClick="onClick"/>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/author_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text=""
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/author_pic"
            android:layout_alignTop="@+id/author_pic"/>
        <TextView
            android:id="@+id/author_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#666666"
            android:text=""
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/author_pic"
            android:layout_alignBottom="@+id/author_pic"/>
        <TextView
            android:id="@+id/video_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text=""
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/author_name"
            android:layout_alignBottom="@+id/author_name"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/author_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>

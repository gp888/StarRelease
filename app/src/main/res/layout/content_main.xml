<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar_main"/>
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="45dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#999999"/>
        <RadioGroup
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <RadioButton
                android:id="@+id/find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="1dp"
                android:drawableTop="@drawable/tab_selector_find"
                android:gravity="center_horizontal|bottom"
                android:text="分类"
                android:textSize="10sp"
                android:textColor="@drawable/tab_selector_tv_color" />

            <RadioButton
                android:id="@+id/choiceness"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="1dp"
                android:paddingTop="2dp"
                android:drawableTop="@drawable/tab_selector_choiceness"
                android:gravity="center_horizontal|bottom"
                android:text="推荐"
                android:checked="true"
                android:textSize="10sp"
                android:textColor="@drawable/tab_selector_tv_color" />

            <RadioButton
                android:id="@+id/mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="1dp"
                android:paddingTop="2dp"
                android:drawableTop="@drawable/tab_selector_mine"
                android:gravity="center_horizontal|bottom"
                android:text="星视"
                android:textSize="10sp"
                android:textColor="@drawable/tab_selector_tv_color" />
        </RadioGroup>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
